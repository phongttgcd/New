{% extends 'base.html.twig' %}

{% block body %}
        <div class="bs-example" data-example-id="striped-table">
        <div class="d-flex justify-content-end">
            <a href="{{ path('user_create') }}" class=" btn btn-primary">Add User</a>
        </div>
        <br>

        <table class="table table-bordered">
            <thead class="thead-dark">
            <tr>
                <th scope="col">USER ID</th>
                <th scope="col">NAME</th>
                <th scope="col">AGE</th>
                <th scope="col">FUNCTION</th>
            </tr>
            </thead>
            <tbody>
            {% for use in user %}
                <tr>
                    <th scope="row">{{ use.id }}</th>
                    <td>{{ use.name }}</td>
                    <td>{{ use.age }}</td>
                    <td>
                        <a href="{{ path('user_details', {'id': use.id}) }} " class='btn btn-success'>View</a>
                        <a href="{{ path('user_details', {'id': use.id}) }}" class='btn btn-primary'>Edit</a>
                        <a href="{{ path('user_details', {'id': use.id}) }}" class='btn btn-danger'>Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
