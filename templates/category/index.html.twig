                <th scope="col">CATEGORY ID</th>
                <th scope="col">NAME</th>
                <th scope="col">FUNCTION</th>
            </tr>
            </thead>
            {% for cate in category %}
            <tbody>
            <tr>
                <td>{{ cate.id }}</td>
                <td>{{ cate.name }}</td>
                <td>
                    <a href="{{ path('category_details', {'id': cate.id}) }} " class='btn btn-success'>View</a> <br>
                    <a href="{{ path('category_edit', {'id': cate.id}) }}" class='btn btn-primary'>Edit</a> <br>
                    <a href="{{ path('category_delete', {'id': cate.id}) }}" class='btn btn-danger'>Delete</a>
                </td>
            </tr>
            </tbody>
            {% endfor %}
        </table>




